{
  "name": "udagram",
  "version": "1.0.0",
  "description": "Udacity Cloud DevOps Nanodegree Project",
  "scripts": {
    "frontend:install": "cd udagram-frontend && npm install",
    "frontend:build": "cd udagram-frontend && npm run build",
    "frontend:lint": "cd udagram-frontend && npm run lint",
    "frontend:deploy": "cd udagram-frontend && chmod +x ./bin/deploy.sh && ./bin/deploy.sh",
    "api:install": "cd udagram-api && npm install",
    "api:build": "cd udagram-api && npm run build",
    "api:deploy": "cd udagram-api && eb use udagram-api-dev && eb deploy",
    "deploy": "echo 'Use specific deploy scripts: npm run frontend:deploy or npm run api:deploy'"
  },
  "keywords": ["cloud", "devops", "aws", "udacity"],
  "author": "Amr Ibrahem"
}